<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btLocalizador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Localizador"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:background="@drawable/bordes_redondeados"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btLocalizarActivo"
            android:layout_width="350dp"
            android:layout_height="120dp"
            android:text="Localizar un Activo"
            android:layout_gravity="center"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:background="@drawable/bordes_redondeados"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="100dp"/>

        <Button
            android:id="@+id/btActPosiciones"
            android:layout_width="350dp"
            android:layout_height="120dp"
            android:text="Act. posiciones en Airbus Positioning System"
            android:layout_gravity="center"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:background="@drawable/bordes_redondeados"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>